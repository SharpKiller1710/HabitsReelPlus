<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitsReelPlus.ViewViewModels.Login.ForgotPassword.ForgotPasswordView"
             Title="{Binding Title}"
             BackgroundColor="Salmon">
    <VerticalStackLayout>

        <Label Text="To verify that you are the person that you say you are:" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Label Text="Please enter your SSN:" HorizontalOptions="Center"/>
        <Label />

        <Entry Placeholder="Enter SSN"
               PlaceholderColor="Black"
               Text="{Binding Password}"
               TextColor="Black"
               WidthRequest="300"
               HorizontalOptions="Center"
               BackgroundColor="Red"/>

        <Entry Placeholder="Enter New Password"
               PlaceholderColor="White"
               Text="{Binding Password}"
               TextColor="Black"
               WidthRequest="300"
               HorizontalOptions="Center" />

        <Entry Placeholder="Reenter New Password"
               PlaceholderColor="White"
               Text="{Binding Password}"
               TextColor="Black"
               WidthRequest="300"
               HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>