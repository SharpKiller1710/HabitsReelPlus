<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitsReelPlus.ViewViewModels.Workout.WorkoutView"
             Title="{Binding Title}">
    <VerticalStackLayout>

        <Grid>
            <Ellipse 
                 StrokeThickness="3"
                 WidthRequest="70"
                 HeightRequest="70"/>

            <Grid.GestureRecognizers>
                <TapGestureRecognizer Tapped="TakePhotoGestureRecognizer_Tapped"
                                        NumberOfTapsRequired="1"
                                        Command ="{Binding OnSettingsClicked}"/>
            </Grid.GestureRecognizers>


        </Grid>
        
    </VerticalStackLayout>
</ContentPage>